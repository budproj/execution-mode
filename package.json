{
  "name": "execution-mode",
  "version": "0.0.1",
  "description": "Web interface for Bud's execution mode",
  "main": "src/index.js",
  "scripts": {
    "start:dev": "run-s intl:refresh server:watch",
    "server:watch": "nodemon",
    "server:launch": "ts-node --project ./src/tsconfig.server.json ./src/index.ts",
    "build": "run-s clean compile copy",
    "compile": "run-s compile:intl compile:typescript",
    "compile:intl": "run-p intl:compile:ptBR intl:compile:enUS",
    "compile:typescript": "tsc --project ./src/tsconfig.server.json",
    "clean": "rimraf -rf dist",
    "copy": "cp README.md LICENSE package.json dist",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "npm run lint --fix",
    "intl:generate:id": "echo '\u001b[36mâž¤ \u001b[90mGenerating react-intl message ids...\u001b[39m' && yarn lint --config .eslintrc.predev --fix",
    "intl:refresh": "run-s intl:generate:id intl:extract",
    "intl:extract": "formatjs extract './src/**/*.ts(x)?' --out-file lang/pt-BR.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "intl:compile:ptBR": "formatjs compile lang/pt-BR.json --ast --out-file compiled-lang/pt-BR.json",
    "intl:compile:enUS": "formatjs compile lang/en-US.json --ast --out-file compiled-lang/en-US.json"
  },
  "author": "delucca <delucca@pm.me>",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/budproj/execution-mode.git"
  },
  "bugs": {
    "url": "https://github.com/budproj/execution-mode/issues"
  },
  "engines": {
    "npm": ">=7.0.8",
    "node": ">=15.0.0"
  },
  "devDependencies": {
    "@budproj/eslint-config-base-ts": "^0.0.12",
    "@budproj/eslint-config-intl": "^0.0.12",
    "@budproj/eslint-config-prettier-ts": "^0.0.12",
    "@budproj/eslint-config-react": "^0.0.12",
    "@budproj/prettier-config": "^0.0.12",
    "@formatjs/cli": "^2.13.5",
    "@tsconfig/recommended": "^1.0.1",
    "@types/accepts": "^1",
    "@types/eslint": "^7",
    "@types/eslint-config-prettier": "^6",
    "@types/eslint-plugin-prettier": "^3",
    "@types/faker": "^5",
    "@types/glob": "^7.1.3",
    "@types/koa": "^2.11.6",
    "@types/koa__router": "^8.0.3",
    "@types/lodash": "^4",
    "@types/node": "^14.14.3",
    "@types/prettier": "^2",
    "@types/react": "^16.9.53",
    "@types/react-beautiful-dnd": "^13",
    "@types/recoil": "^0",
    "@types/rimraf": "^3",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "miragejs": "^0.1.41",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0"
  },
  "dependencies": {
    "@apollo/client": "^3.2.9",
    "@auth0/auth0-react": "^1.2.0",
    "@chakra-ui/react": "^1.0.0",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@koa/router": "^9.4.0",
    "accepts": "^1.3.7",
    "chalk": "^4.1.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.16.1",
    "deepmerge": "^4.2.2",
    "framer-motion": "^2.9.4",
    "glob": "^7.1.6",
    "koa": "^2.13.0",
    "lodash": "^4.17.20",
    "logform": "^2.2.0",
    "next": "^10.0.2-canary.17",
    "react": "^16.14.0",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.14.0",
    "react-intl": "^5.8.8",
    "recoil": "^0.1.2",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint"
    }
  }
}
